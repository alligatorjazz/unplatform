---
import { getCollection } from "astro:content";
import LibraryView from "../components/LibraryView.astro";
import Main from "../layouts/Main.astro";

const libraryEntries = await getCollection("library");
---

<Main
	title="Home"
	description="The definitive guide for escaping social media (and joining the indie web.)"
>
	<div
		class="flex flex-col items-center bg-bg border border-text max-w-4xl mx-auto p-4"
	>
		<p class="text-sm text-center mb-4">
			Articles, books, and podcasts that have been influential on
			Unplatform and its philosophy.
		</p>
		<LibraryView title="Recommendations" entries={libraryEntries} />
	</div>
</Main>
